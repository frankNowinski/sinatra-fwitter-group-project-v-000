<h2><em>Login</em></h2><br>
<p class="lead invalid">
  <% if locals.include?(:missing_field) %>
  <%= missing_field %>
  <% elsif locals.include?(:taken_username) %>
  <%= taken_username %>
  <% elsif locals.include?(:taken_email) %>
  <%= taken_email %>
  <% end %>
</p>

<form action="/login" method="post">

  <!-- Username -->
  <div class="form-group row">
    <label for="username" class="col-sm-1 form-control-label">Username:</label>
    <div class="col-sm-3">
      <input type="text" id="username" name="data[username]" class="form-control" placeholder="Username">
    </div>
  </div>

  <!-- Password -->
  <div class="form-group row">
    <label for="password" class="col-sm-1 form-control-label">Password:</label>
    <div class="col-sm-3">
      <input type="password" id="password" name="data[password]" class="form-control" placeholder="Password">
    </div>
  </div><br>

  <!-- Submit Button -->
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-9">
      <button type="submit" value="Login" class="btn btn-primary">Login</button>
    </div>
  </div>

</form>
